<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/alarmRootLayout"
    android:layout_width="match_parent" android:layout_height="match_parent" android:padding="16dp">

    <TextView android:id="@+id/alarmTimerName" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Timer Name" android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/dismissButton"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button android:id="@+id/dismissButton" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="32dp" android:text="Dismiss"
        app:layout_constraintBottom_toTopOf="@+id/snoozeContainer"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmTimerName" />

    <LinearLayout android:id="@+id/snoozeContainer" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_marginTop="16dp"
        android:orientation="horizontal" app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dismissButton">

        <Button android:id="@+id/snoozeShortButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginEnd="8dp"
            android:text="Snooze (Short)" />

        <Button android:id="@+id/snoozeLongButton" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginStart="8dp"
            android:text="Snooze (Long)" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
